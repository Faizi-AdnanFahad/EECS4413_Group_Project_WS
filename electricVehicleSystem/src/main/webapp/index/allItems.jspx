	<div class="container">
		<div class="sort">
			<div id="button1" class="button">
				<form action="sortByPriceASC.jspx" method="get">
					<button id="updateData" type="submit">Price_ASC</button>
				</form>
			</div>
			<div id="button2" class="button">
				<form action="sortByPriceDESC.jspx" method="get">
					<button id="updateData" type="submit">Price_DESC</button>
				</form>
			</div>
			<div id="button3" class="button">
				<form action="sortByMileageHTL.jspx" method="get">
					<button id="updateData" type="submit">Mileage_HTL</button>
				</form>
			</div>
			<div id="button4" class="button">
				<form action="sortByMileageLTH.jspx" method="get">
					<button id="updateData" type="submit">Mileage_LTH</button>
				</form>
			</div>
		</div>
		<div id="itemsContainer">
			<c:forEach var="j" begin="0" end="23">
				<div class="card">
					<img
						src="https://github.com/Faizi-AdnanFahad/EECS4413_Group_Project_WS/blob/main/sources/cars/"
						alt="Vehicle Image" id="vehicle_image_${j}" width="300"
						height="200"></img>

					<p id="itemName_${j}">
						<span>Vehicle Brand: </span>
					</p>
					<p id="itemModel_${j}">
						<span>Vehicle Model: </span>
					</p>
					<p id="itemPrice_${j}">
						<span>Vehicle Price: </span>
					</p>
					<p id="itemMilage_${j}">
						<span>Vehicle Mileage: </span>
					</p>
					<div class="button-container">
						<a id="viewMoreBtn_${j}" class="btn btn-primary"
							href="/electricVehicleSystem/VehicleController?id="><button>View
								More</button></a>
					</div>
					<label>Compare<input type="checkbox"
						id="compareCheckbox_${j}"></input></label>

				</div>
			</c:forEach>
		</div>
	</div>
	<footer>
		<form action="/electricVehicleSystem/FeedbackController" method="post">
			<label for="Feedback">Feedback:</label> <input id="feedback"
				name="feedback" type="text"></input> <input type="submit"
